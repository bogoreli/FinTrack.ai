generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Transaction {
  id            String              @id @default(uuid())
  name          String
  type          TransactionType
  amount        Decimal             @db.Decimal(10, 2)
  category      TransactionCategory
  paymentMethod PaymentMethod
  date          DateTime
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt
  userId        String
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  BANK_TRANSFER
  BANK_SLIP
  CASH
  PIX
  OTHER
}

enum TransactionCategory {
  HOUSING
  TRANSPORTATION
  FOOD
  SALARY
  ENTERTAINMENT
  UTILITY
  EDUCATION
  HEALTH
  OTHER
}

enum TransactionType {
  DEPOSIT
  INVESTMENT
  EXPENSE
}
